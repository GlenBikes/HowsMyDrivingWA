{
  "compilerOptions": {
    "lib": ["es6", "es2018.promise"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": ".",
    "outDir": "dist",
    "types" : ["aws-sdk", "jasmine", "node", "@types/sinon", "@types/twit"],
    "traceResolution": true,
    "downlevelIteration": true
  },
  "include": [
    "*.ts",
    "^\\.ts$",
    "src/**/*",
    "test/**/*",
    "util/**/*"
  ]
}