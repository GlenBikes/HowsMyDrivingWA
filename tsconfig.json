{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": ".",
    "outDir": "dist",
    "preserveSymlinks": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "types" : ["node", "mocha"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"  
  ],
  "exclude": [
    "log/**",
    "^dist/**/*",
    "^definitions/**/*"
  ]
}
