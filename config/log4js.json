{
    "appenders": {
      "lastmention": {
        "type": "file",
        "filename": "log/_last_mention_id.txt",
        "maxLogSize": 1024,
        "numBackups": 2,
        "keepFileExt": true
      },
      "lastdm": {
        "type": "file",
        "filename": "log/_last_dm_id.txt",
        "maxLogSize": 1024,
        "numBackups": 2,
        "keepFileExt": true
      },
      "out": { 
        "type": "console" 
      },
      "app": {
        "type": "file",
        "filename": "log/app.log",
        "maxLogSize": 1048576,
        "numBackups": 2,
        "keepFileExt": true
      },
      "err": {
        "type": "file",
        "filename": "log/err.log",
        "maxLogSize": 1048576,
        "numBackups": 2,
        "keepFileExt": true
      },
      "errors": {
        "type": "logLevelFilter",
        "level": "ERROR",
        "appender": "err"
      }
    },
    "categories": {
      "default": { "appenders": [ "app", "out" ], "level": "ALL" },
      "lastmention": { "appenders": [ "lastmention"], "level": "ALL" },
      "lastdm": { "appenders": [ "lastdm"], "level": "ALL" }
    }
}
